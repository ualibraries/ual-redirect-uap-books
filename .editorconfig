# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

# Reference: https://make.wordpress.org/core/handbook/best-practices/coding-standards/php/
[*.php]
indent_style = tab

# Reference: https://make.wordpress.org/core/handbook/best-practices/coding-standards/javascript/#indentation-and-line-breaks
[*.js]
indent_style = tab
